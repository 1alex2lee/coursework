{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node Server",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js"
        },
        {
            "name": "Firefox debugger",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/static"
        },
        {
            "name": "Mocha Tests",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "reloadOnAttach": true,
            "file": "${workspaceFolder}/test.html",
            "preferences": {"security.fileurl.strict_origin_policy": false,
                "privacy.file_unique_origin:": false
            },
            "clearConsoleOnReload": true
        }
    ]
}